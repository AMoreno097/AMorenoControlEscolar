@model ML.alumnos
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-lg ">
    <div class=row>
        <div class="text-center">
            <h2>Alumnos</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione una alumno para añadir o eliminar materias</h5>
            <hr />
        </div>
    </div>
    <section>

        <div style="float:right;">
            <div class="row">
                @Html.ActionLink("Agregar", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })
            </div>
        </div>
    </section>
    <hr />
    <section>
        @if (Model.Alumnos == null)
        {
            <div class="row">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        }
        else
        {


            <table class="table table-dark table-hover table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:lighter;">Editar</td>
                        <td class="hidden">IdAlumnos</td>
                        <td class="text-center" style="font-weight:bold;">Nombre</td>
                       
                    </tr>
                </thead>
                <tbody>

                    @foreach (ML.alumnos Alumnos in Model.Alumnos)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Alumno", new { IdAlumno = Alumnos.IdAlumnos })"></a></td>
                            <td class="hidden">@Alumnos.IdAlumnos</td>
                            <td>@Alumnos.Nombre @Alumnos.ApellidoPaterno @Alumnos.ApellidoMaterno</td>
                        </tr>
                    }
                </tbody>
            </table>

        }



    </section>
</div>


